<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

  <!-- User Login Servlet -->
  <servlet>
    <servlet-name>UserLoginServlet</servlet-name>
    <servlet-class>servlets.UserLoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserLoginServlet</servlet-name>
    <url-pattern>/UserLoginServlet</url-pattern>
  </servlet-mapping>

  <!-- Admin Login Servlet -->
  <servlet>
    <servlet-name>AdminLoginServlet</servlet-name>
    <servlet-class>servlets.AdminLoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminLoginServlet</servlet-name>
    <url-pattern>/AdminLoginServlet</url-pattern>
  </servlet-mapping>

  <!-- Signup Servlet -->
  <servlet>
    <servlet-name>UserSignupServlet</servlet-name>
    <servlet-class>servlets.UserSignupServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserSignupServlet</servlet-name>
    <url-pattern>/UserSignupServlet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>TestFileServlet</servlet-name>
    <servlet-class>servlets.TestFileServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TestFileServlet</servlet-name>
    <url-pattern>/TestFileServlet</url-pattern>
  </servlet-mapping>



</web-app>